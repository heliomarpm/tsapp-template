{
  "entryPoints": ["./src/*"],
  "out": "./.docs/typedoc",
  "docsRoot": "./.docs",
  "readme": "./.docs/readme.md",
  "plugin": ["typedoc-plugin-markdown", "typedoc-vitepress-theme"],
  "indexFormat": "table",
  "useCodeBlocks": true,
  "disableSources": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "strictNullChecks": false
  },
  "cleanOutputDir": true,
  "hideGenerator": true,
  "hideBreadcrumbs": true,
  "sidebar": {
    "autoConfiguration": true,
    "format": "vitepress"
  }
}
